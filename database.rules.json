{
  "rules": {
    "users": {
      "$uid": {
        "emergencyContacts": {
          ".read": true,
          ".write": "$uid === auth.uid",
          "$contactId": {
            ".validate": "newData.hasChildren(['name', 'phone', 'relationship'])"
          }
        },
        "profile": {
          ".read": "$uid === auth.uid",
          ".write": "$uid === auth.uid"
        },
        ".read": "$uid === auth.uid",
        ".write": "$uid === auth.uid"
      }
    },
    "helmet": {
      "$uid": {
        ".read": "$uid === auth.uid",
        ".write": "$uid === auth.uid"
      }
    },
    "trips": {
      "$uid": {
        ".read": "$uid === auth.uid",
        ".write": "$uid === auth.uid"
      }
    }
  }
}